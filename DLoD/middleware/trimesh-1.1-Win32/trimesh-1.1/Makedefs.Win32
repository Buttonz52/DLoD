CXX = /tmp/cross-tools/bin/i386-mingw32msvc-g++

ifdef DEBUG
	CXXFLAGS = -march=i686 -g -Wall -Wno-reorder -Wno-sign-compare -Wno-sign-promo
else
	CXXFLAGS = -march=i686 -O9 -w -ffast-math -funroll-loops
endif


CXXFLAGS += -I$(TRIMESH_DIR)/include
LDFLAGS = -L$(TRIMESH_DIR)/lib.$(UNAME)
LIBS = -ltrimesh -lm
GLLIBS = -lglut32 -lopengl32 -lglu32


$(OBJDIR)/%.o: %.cc
	@ echo "$(CXX) $(CXXFLAGS) -c $< -o $@"
	@ rm -f "$(@:.o=.d)" && env DEPENDENCIES_OUTPUT="$(@:.o=.d) $@" $(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJDIR):
	mkdir $@

-include $(OBJDIR)/*.d


AR = /tmp/cross-tools/bin/i386-mingw32msvc-ar -rcs
EXE = .exe
